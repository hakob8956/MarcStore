@model Product
@{
    Layout = "_Layout";
}

<div>
    <h1 class="h1 text-center">@Model.Name</h1>
</div>

<div class="pull-right">
    <h3 class="h3">
        <span class="pull-right label label-primary">
            @Model.Price.ToString("c")
        </span>
    </h3>
    <br /><br />

    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { id = Model.ProductID }))
    {
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="lead">

            <button type="submit" class="btn btn-success btn-sm pull-right">
                Add To Cart
            </button>
        </span>
    }
</div>
<div>
    <img style=" display: inline-block;
                     height: auto;
                     max-width: 100%;"
         src="@Url.Action("GetImage", "Product",
               new { Model.ProductID })" class="img-fluid" alt="Responsive image">

</div>
<div class="text-justife" style="margin-bottom:70px;display:inline-block;width:85%">
    @Model.Text;
</div>
<br />
