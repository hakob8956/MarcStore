@model LoginModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Login Page";
}


<h2 class="text-danger h2">Login to Application</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control form-group"  style="width:50%"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control form-group" style="width:50%"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Remember</label>
        <input asp-for="RememberMe" class="form-check-input"/>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-group" value="Login" />
        <a class="btn btn-primary btn-group" asp-action="Register">Register</a>
    </div>
</form>